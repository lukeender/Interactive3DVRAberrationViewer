<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hoopla.socket.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:text="Start Streaming" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|text"
        android:ems="10"
        android:id="@+id/ipadr"
        android:layout_below="@+id/send"
        android:layout_toRightOf="@+id/send"
        android:layout_toEndOf="@+id/send"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|text"
        android:ems="10"
        android:id="@+id/port"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ipadr"
        android:layout_alignStart="@+id/ipadr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Addr"
        android:id="@+id/textView2"
        android:layout_below="@+id/send"
        android:layout_alignRight="@+id/ipadr"
        android:layout_alignEnd="@+id/ipadr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port"
        android:id="@+id/textView3"
        android:layout_above="@+id/port"
        android:layout_alignLeft="@+id/port"
        android:layout_alignStart="@+id/port" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textin_g"
        android:layout_below="@+id/port"
        android:layout_alignRight="@+id/port"
        android:layout_alignEnd="@+id/port"
        android:layout_marginTop="77dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textin_a"
        android:layout_alignBottom="@+id/textin_g"
        android:layout_alignRight="@+id/textin_g"
        android:layout_alignEnd="@+id/textin_g" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch VLC"
        android:id="@+id/streamVideo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show app info"
        android:id="@+id/showinfo"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ffmpeg" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Stream"
        android:id="@+id/ffmpeg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
